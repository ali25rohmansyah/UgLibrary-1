<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    android:background="@drawable/bg_login"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:background="@drawable/bg_home">

        <ImageView
            android:id="@+id/avatar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_male"
            android:layout_centerHorizontal="true"
            android:paddingTop="40dp"
            android:paddingBottom="10dp"/>
        <TextView
            android:layout_below="@id/avatar"
            android:id="@+id/textName"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            style="@style/label_title"
            android:text="Rheyno Apria Pratama"
            android:textColor="@color/purple"/>
        <TextView
            android:layout_below="@id/textName"
            android:id="@+id/textNPM"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="56416282"
            android:fontFamily="@font/lato"
            android:textColor="@color/textHint"/>
    </RelativeLayout>


    <GridLayout
        android:id="@+id/mainGrid"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:layout_marginTop="-30dp"
        android:columnCount="2"
        android:rowCount="2"
        android:columnOrderPreserved="false">

        <android.support.v7.widget.CardView
            android:id="@+id/btn_booking"
            android:layout_height="0dp"
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="5dp"
            app:cardPreventCornerOverlap="false"
            app:cardCornerRadius="15dp"
            app:cardBackgroundColor="@color/white">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_margin="12dp"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="200px"
                    android:layout_height="200px"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/ic_booking"
                    android:layout_marginBottom="10sp"/>
                <TextView
                    android:id="@+id/booking"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Booking Loker"
                    android:fontFamily="@font/lato_bold"
                    android:textColor="@color/purple"
                    android:textSize="18sp"
                    android:textAlignment="center"
                    />
            </LinearLayout>

        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:id="@+id/btn_list"
            android:layout_height="0dp"
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="20dp"
            app:cardPreventCornerOverlap="false"
            app:cardCornerRadius="15dp"
            app:cardBackgroundColor="@color/white">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_margin="16dp"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="200px"
                    android:layout_height="200px"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/ic_list"
                    android:layout_marginBottom="10sp"/>
                <TextView
                    android:id="@+id/mylist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="List Booking"
                    android:fontFamily="@font/lato_bold"
                    android:textColor="@color/purple"
                    android:textSize="18sp"
                    android:textAlignment="center"
                    />
            </LinearLayout>

        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:id="@+id/btn_info"
            android:layout_height="0dp"
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="5dp"
            app:cardPreventCornerOverlap="false"
            app:cardCornerRadius="15dp"
            app:cardBackgroundColor="@color/white">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_margin="16dp"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="200px"
                    android:layout_height="200px"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/ic_info"
                    android:layout_marginBottom="10sp"/>
                <TextView
                    android:id="@+id/info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Info Perpus"
                    android:fontFamily="@font/lato_bold"
                    android:textColor="@color/purple"
                    android:textSize="18sp"
                    android:textAlignment="center"
                    />
            </LinearLayout>

        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:id="@+id/btn_logout"
            android:layout_height="0dp"
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="20dp"
            app:cardPreventCornerOverlap="false"
            app:cardCornerRadius="15dp"
            app:cardBackgroundColor="@color/white">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_margin="16dp"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="200px"
                    android:layout_height="200px"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/ic_exit"
                    android:layout_marginBottom="10sp"/>
                <TextView
                    android:id="@+id/logout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Keluar Aplikasi"
                    android:fontFamily="@font/lato_bold"
                    android:textColor="@color/purple"
                    android:textSize="18sp"
                    android:textAlignment="center"
                    />
            </LinearLayout>

        </android.support.v7.widget.CardView>

    </GridLayout>


</LinearLayout>